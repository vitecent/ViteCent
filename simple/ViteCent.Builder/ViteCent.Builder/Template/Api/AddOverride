/// <summary>
/// 新增$!{Table.Description}接口拓展
/// </summary>
/// <remarks>
/// 该部分类主要负责处理新增公司信息时的自定义逻辑
/// </remarks>
public partial class $!{Setting.AddName}$!{Table.CamelCaseName}
{
    /// <summary>
    /// 验证参数
    /// </summary>
    /// <param name="args"></param>
    /// <param name="user"></param>
    /// <returns></returns>
    internal static void OverrideInvoke($!{Setting.AddName}$!{Table.CamelCaseName}$!{Setting.Data.ArgsSuffix} args, BaseUserInfo user)
    {
#if($HasCompanyId)
        // 如果用户不是超级管理员，则设置公司标识
        if (user.IsSuper != (int)YesNoEnum.Yes)
            if (string.IsNullOrEmpty(args.CompanyId))
                args.CompanyId = user?.Company?.Id ?? string.Empty;

#end
#if($HasDepartmentId)
        // 如果用户不是超级管理员，则设置部门标识
        if (user.IsSuper != (int)YesNoEnum.Yes)
            if (string.IsNullOrEmpty(args.DepartmentId))
                args.DepartmentId = user?.Department?.Id ?? string.Empty;;

#end
#if($HasPositionId)
        // 如果用户不是超级管理员，则设置职位标识
        if (user.IsSuper != (int)YesNoEnum.Yes)
            if (string.IsNullOrEmpty(args.PositionId))
                args.PositionId = user?.Position?.Id ?? string.Empty;

#end
    }
}