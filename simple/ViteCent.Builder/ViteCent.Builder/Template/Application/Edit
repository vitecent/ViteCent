#if($HasCompanyId)
using $!{DataBase.Name}.$!{Setting.Entity.EntityName}.BaseCompany;
#end
#if($HasDepartmentId)
using $!{DataBase.Name}.$!{Setting.Entity.EntityName}.BaseDepartment;
