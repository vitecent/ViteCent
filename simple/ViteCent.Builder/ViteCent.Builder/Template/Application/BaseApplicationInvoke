using Microsoft.AspNetCore.Http;
using System.Security.Claims;
using $!{DataBase.InvokeProjrect}.$!{Setting.Data.Name}.BaseCompany;
using $!{DataBase.InvokeProjrect}.$!{Setting.Data.Name}.BaseDepartment;
