    {
        if (string.IsNullOrWhiteSpace(companyId) && string.IsNullOrWhiteSpace(departmentId) && string.IsNullOrWhiteSpace(userId))
            return new DataResult<BaseUser$!{Setting.Data.ResultSuffix}>();

        var getUserArgs = new $!{Setting.GetName}BaseUser$!{Setting.Data.ArgsSuffix}
        {
            CompanyId = companyId,
            DepartmentId = departmentId,
